extends common/layout

block layout-content
  section#categories
    h1 Categories
    .crud-buttons 
          a(href="/addCategory") Add
    .category-list
      each category in categories
        .category
          h3= category.name
          p= category.description
          .crud-buttons
            a(href=`/categories/edit/${category.id}`) Edit
            a(href=`/categories/delete/${category.id}`) Delete

          
